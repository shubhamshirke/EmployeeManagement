@page "/"
@inherits EmployeeListBase
<h1>Employee management </h1>
@if (Employees == null)
{
    <div class="spinner"></div>
}

else
{
<div class="row">
    <a href="/add" class="btn btn-primary m-1">+ADD Employee</a>
    @foreach (var employee in Employees)
    {
        <div class="col-6 m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.FirstName  @employee.LastName</h3>
                <p>@employee.Email</p>
            </div>

            <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />


            <div class="card-footer text-center">
                <a href="/display" class="btn btn-primary m-1">View</a>

                <a href="#" class="btn btn-primary m-1">Edit</a>

                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
}